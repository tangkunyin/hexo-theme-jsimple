<aside id="sidebar">
  <nav id="tags">
    <a href="/index.html" id="avatar" style="background-image:url(<%= theme.avatar %>)"></a>

    <ul id="tags__ul">
      <li id="pl__all" class="tags__li tags-btn active">所有文章</li>
      <% site.categories.each(function(item){ %>
      <li id="<%= item.title %>" class="tags__li tags-btn"><%= item.title %></li>
      <% }); %>
    </ul>

    <div id="tags__bottom">
      <a href="mailto:tangkunyin@shuoit.net" id="icon-email" class="tags-btn fontello"></a>
      <a href="/pages/rss.xml" id="icon-feed" class="tags-btn fontello"></a>
    </div>
  </nav> <!-- end #tags -->

  <div id="posts-list">
    <form action="https://www.baidu.com/s?wd=site:shuoit.net" id="search-form" target="_blank">
      <a href="/" id="mobile-avatar" style="background-image:url(<%= theme.avatar %>)"></a>
      <input id="search-input" type="text" placeholder="戳一下不会怀孕" />
    </form>
    <nav id="pl__container">
      <% site.posts.each(function(item){ %>
      <a class="<%= item.categorie %> pl__all" href="<%- url_for(item.path) %>"><span class="pl__circle"></span><span
                class="pl__title"><%= item.title%></span><span class="pl__date"><%= date(item.date) %></span></a>
      <% }); %>
    </nav>
  </div> <!-- end #posts-list -->
</aside> <!-- end #sidebar -->