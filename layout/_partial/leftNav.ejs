  <div class="dropdown">
    <a class="active logo" role="button" data-original-title="网站主页" data-container="div.expanded" href="/">
      <b><%= theme.siteShortName %></b><i class="fa fa-home"></i><span class="title">首页</span>
    </a>
    <a data-toggle="tooltip" data-placement="right" data-original-title="归档" data-container="div.expanded" href="/archive">
