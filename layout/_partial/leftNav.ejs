    <a class="signin" data-signin-link="true" data-toggle="modal" data-placement="right" data-original-title="RSS"
       data-container="div.expanded" href="<%= theme.rssUrl %>">
      <i class="fa fa-rss"></i><span class="title">RSS</span>
    </a>
  </div>
</div>