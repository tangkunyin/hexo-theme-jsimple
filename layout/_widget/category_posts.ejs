<li class="<%= (post.photos && post.photos.length) ? 'have-img' : '' %>">
  <!-- 有配图默认渲染第一张 -->
    <% if (post.photos && post.photos.length){ %>
  <a class="wrap-img" href="<%- url_for(post.path) %>">
    <img src="<%= post.photos[0] %>" alt="<%= post.title %>">
  </a>
    <% } %>
  <div>
    <p class="list-top">
      <a class="author-name blue-link" target="_blank"
         href="<%= theme.authorUrl %>"><%= post.author %></a>
      <em>·</em>
      <span class="time" data-shared-at="<%= date(post.date) %>"><%= date(post.date) %></span>
    </p>
    <h4 class="title"><a target="_blank" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h4>
    <div class="list-footer">
      <a target="_blank" href="<%- url_for(post.path) %>">阅读</a> ·
      <a target="_blank" href="<%- url_for(post.path) %>#disqus_thread">评论</a> ·
      <a target="_blank" href="<%= theme.donateUrl %>">喜欢</a>
    </div>
  </div>
</li>