<% if (theme.analytics.enable){ %>
    <% if (theme.analytics.google_analytics_id){ %>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="//www.googletagmanager.com/gtag/js?id=<%= theme.analytics.google_analytics_id %>"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '<%= theme.analytics.google_analytics_id %>');
        </script>
    <% } %>
    <!-- put your likes here. -->
<% } %>
